<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.dinh_admin.controller.UserMgmtController">
   <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   <children>
      <Label text="QUẢN TRỊ NGƯỜI DÙNG (ADMIN)" textFill="#8e44ad">
         <font><Font name="System Bold" size="20.0" /></font>
      </Label>
      
      <TableView fx:id="tableUsers" prefHeight="300.0">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="50" />
          <TableColumn fx:id="colUsername" text="Tên đăng nhập" prefWidth="150" />
          
          <TableColumn fx:id="colRole" text="Vai trò" prefWidth="100" />
          
          <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100" />
          
          <TableColumn fx:id="colCreatedAt" text="Ngày tạo" prefWidth="150" />
        </columns>
      </TableView>

      <Label text="Thêm tài khoản mới:" textFill="#7f8c8d"><font><Font name="System Bold" size="12.0" /></font></Label>
      <HBox spacing="10.0">
         <TextField fx:id="txtUser" promptText="Username" />
         <PasswordField fx:id="txtPass" promptText="Password" />
         <ComboBox fx:id="cbRole" promptText="Vai trò (Role)" prefWidth="120.0" />
         <Button text="Thêm User" onAction="#handleAddUser" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
      </HBox>
      
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
          <Button text="Khóa / Mở Khóa User" onAction="#handleToggleStatus" style="-fx-background-color: #e67e22; -fx-text-fill: white;" />
          <Button text="Xóa User" onAction="#handleDelete" style="-fx-background-color: #c0392b; -fx-text-fill: white;" />
      </HBox>
   </children>
</VBox>