<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.dinh_admin.controller.AuditController">
   <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   <children>
      <Label text="NHẬT KÝ HOẠT ĐỘNG HỆ THỐNG (AUDIT LOG)" textFill="#2c3e50">
         <font><Font name="System Bold" size="20.0" /></font>
      </Label>
      <Label text="Lịch sử thao tác của Admin và Staff:" textFill="#7f8c8d"/>
      
      <TableView fx:id="tableAudit" prefHeight="500.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="50" />
          <TableColumn fx:id="colTime" text="Thời gian" prefWidth="150" />
          <TableColumn fx:id="colUser" text="Người thực hiện" prefWidth="120" />
          <TableColumn fx:id="colAction" text="Hành động" prefWidth="100" />
          <TableColumn fx:id="colTable" text="Đối tượng" prefWidth="100" />
          <TableColumn fx:id="colDesc" text="Chi tiết thay đổi" prefWidth="250" />
        </columns>
      </TableView>
   </children>
</VBox>