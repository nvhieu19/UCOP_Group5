<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.long_payment.controller.PaymentController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <Label text="VÍ ĐIỆN TỬ &amp; LỊCH SỬ GIAO DỊCH" textFill="#27ae60">
      <font><Font name="System Bold" size="24.0" /></font>
   </Label>

   <HBox spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
      <VBox>
          <Label text="Số dư ví hiện tại:" textFill="#7f8c8d"><font><Font size="14.0" /></font></Label>
          <Label fx:id="lblBalance" text="0 VNĐ" textFill="#2980b9">
             <font><Font name="System Bold" size="36.0" /></font>
          </Label>
      </VBox>
   </HBox>

   <HBox spacing="10.0" alignment="CENTER_LEFT">
       <Label text="Nạp thêm:" />
       <TextField fx:id="txtAmount" promptText="Nhập số tiền..." />
       <Button text="Nạp Tiền" onAction="#handleDeposit" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
   </HBox>

   <Label text="Lịch sử thanh toán đơn hàng:" textFill="#34495e"><font><Font name="System Bold" size="16.0" /></font></Label>
   <TableView fx:id="tableHistory" prefHeight="300.0">
       <columns>
           <TableColumn text="Mã GD" prefWidth="50"><cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory></TableColumn>
           <TableColumn text="Ngày giờ" prefWidth="150"><cellValueFactory><PropertyValueFactory property="paymentDate" /></cellValueFactory></TableColumn>
           <TableColumn text="Số tiền" prefWidth="120"><cellValueFactory><PropertyValueFactory property="amount" /></cellValueFactory></TableColumn>
           <TableColumn text="Phương thức" prefWidth="100"><cellValueFactory><PropertyValueFactory property="paymentMethod" /></cellValueFactory></TableColumn>
           <TableColumn text="Trạng thái" prefWidth="100"><cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory></TableColumn>
       </columns>
   </TableView>
</VBox>