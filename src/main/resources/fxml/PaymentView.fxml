<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.long_payment.controller.PaymentController">
   <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   <children>
      <Label text="VÍ ĐIỆN TỬ &amp; LỊCH SỬ GIAO DỊCH" textFill="#27ae60">
         <font><Font name="System Bold" size="22.0" /></font>
      </Label>

      <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
         <children>
            <Label text="Số dư hiện tại:">
               <font><Font size="18.0" /></font>
            </Label>
            <Label fx:id="lblBalance" text="0 VNĐ" textFill="#e67e22">
               <font><Font name="System Bold" size="28.0" /></font>
            </Label>
         </children>
      </HBox>

      <VBox spacing="10.0" style="-fx-border-color: #2980b9; -fx-border-radius: 5; -fx-padding: 15;">
         <Label text="THANH TOÁN ĐƠN HÀNG" textFill="#2980b9">
            <font><Font name="System Bold" size="16.0" /></font>
         </Label>
         
         <Label text="Chọn đơn hàng chưa thanh toán:" />
         <ComboBox fx:id="cbOrdersToPay" prefWidth="500.0" promptText="-- Chọn đơn hàng --" />
         
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <Label fx:id="lblOrderTotal" text="Tổng tiền: 0 VNĐ" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
            
            <Label maxWidth="Infinity" HBox.hgrow="ALWAYS" />
            
            <Button fx:id="btnPayByWallet" text="Thanh toán Ví" onAction="#handlePayByWallet" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
            
            <Button text="Chuyển khoản (QR)" onAction="#handlePayByBank" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" />
            
            <Button fx:id="btnPayCOD" text="Thanh toán COD" onAction="#handlePayCOD" style="-fx-background-color: #f39c12; -fx-text-fill: white;" />
            
            <Button text="Hoàn tiền (Refund)" onAction="#handleRefund" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
         </HBox>
      </VBox>

      <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
         <Label text="Nạp thêm tiền vào ví:" textFill="#7f8c8d"><font><Font name="System Bold" size="14.0" /></font></Label>
         <HBox spacing="10.0">
            <TextField fx:id="txtDeposit" promptText="Nhập số tiền muốn nạp..." prefWidth="300.0" />
            <Button text="Nạp ngay" onAction="#handleDeposit" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" />
         </HBox>
      </VBox>

      <Label text="Lịch sử thanh toán đơn hàng:"><font><Font name="System Bold" size="16.0" /></font></Label>
      <TableView fx:id="tableHistory" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn text="Mã GD" prefWidth="60"><cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory></TableColumn>
          <TableColumn text="Ngày giao dịch" prefWidth="180"><cellValueFactory><PropertyValueFactory property="paymentDate"/></cellValueFactory></TableColumn>
          <TableColumn text="Số tiền (VNĐ)" prefWidth="150"><cellValueFactory><PropertyValueFactory property="amount"/></cellValueFactory></TableColumn>
          <TableColumn text="Loại giao dịch" prefWidth="120"><cellValueFactory><PropertyValueFactory property="paymentMethod"/></cellValueFactory></TableColumn>
          <TableColumn text="Trạng thái" prefWidth="100"><cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory></TableColumn>
        </columns>
      </TableView>
   </children>
</VBox>