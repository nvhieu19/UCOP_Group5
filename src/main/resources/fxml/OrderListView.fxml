<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.hieu_order.controller.OrderListController">
   <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   <children>
      <Label text="QUẢN LÝ ĐƠN HÀNG" textFill="#2c3e50"><font><Font name="System Bold" size="20.0" /></font></Label>
      
      <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
         <Label text="Trạng thái:" />
         <ComboBox fx:id="cbStatus" promptText="Tất cả" prefWidth="150.0" />
         <Button text="Lọc" onAction="#handleFilter" />
      </HBox>

      <TableView fx:id="tableOrders" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn text="ID" prefWidth="50"><cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory></TableColumn>
          <TableColumn text="Ngày đặt" prefWidth="150"><cellValueFactory><PropertyValueFactory property="orderDate" /></cellValueFactory></TableColumn>
          <TableColumn text="Khách hàng" prefWidth="150"><cellValueFactory><PropertyValueFactory property="customer" /></cellValueFactory></TableColumn>
          <TableColumn text="Tổng tiền" prefWidth="120"><cellValueFactory><PropertyValueFactory property="totalAmount" /></cellValueFactory></TableColumn>
          <TableColumn text="Trạng thái" prefWidth="120"><cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory></TableColumn>
        </columns>
      </TableView>
   </children>
</VBox>