<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucop.hai_catalog.controller.ProductController">
   <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
   
   <VBox spacing="10.0" HBox.hgrow="ALWAYS">
       <Label text="KHO HÀNG (CATALOG)" textFill="#2980b9"><font><Font name="System Bold" size="20.0" /></font></Label>
       <TableView fx:id="tableItems" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn text="SKU" prefWidth="80"><cellValueFactory><PropertyValueFactory property="sku" /></cellValueFactory></TableColumn>
            <TableColumn text="Tên Sản phẩm" prefWidth="200"><cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory></TableColumn>
            <TableColumn text="Giá" prefWidth="100"><cellValueFactory><PropertyValueFactory property="price" /></cellValueFactory></TableColumn>
            <TableColumn text="Tồn" prefWidth="60"><cellValueFactory><PropertyValueFactory property="stockQuantity" /></cellValueFactory></TableColumn>
          </columns>
       </TableView>
   </VBox>

   <VBox spacing="15.0" prefWidth="300.0" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-background-radius: 10;">
       <Label text="Thông tin chi tiết" textFill="#7f8c8d"><font><Font name="System Bold" size="14.0" /></font></Label>
       
       <VBox alignment="CENTER" style="-fx-border-color: #bdc3c7; -fx-border-style: dashed; -fx-background-color: white;">
           <ImageView fx:id="imgPreview" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
           <Button text="Chọn ảnh..." onAction="#handleChooseImage" style="-fx-margin-top: 5px;"/>
       </VBox>
       
       <TextField fx:id="txtSku" promptText="Mã SKU (VD: IP15)" />
       <TextField fx:id="txtName" promptText="Tên sản phẩm" />
       <TextField fx:id="txtPrice" promptText="Giá tiền" />
       <TextField fx:id="txtStock" promptText="Số lượng tồn kho" />
       
       <HBox spacing="10.0" alignment="CENTER">
           <Button text="Thêm Mới" onAction="#handleAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white;" prefWidth="100" />
           <Button text="Xóa Chọn" onAction="#handleDelete" style="-fx-background-color: #c0392b; -fx-text-fill: white;" prefWidth="100" />
       </HBox>
   </VBox>
</HBox>